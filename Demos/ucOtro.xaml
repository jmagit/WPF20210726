<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demos"
             xmlns:Views="clr-namespace:Demos.Views" x:Class="Demos.ucOtro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Calendar x:Name="calendario" HorizontalAlignment="Left" Margin="131,128,0,0" VerticalAlignment="Top"/>

        <Views:ucTrabajosLst HorizontalAlignment="Left" Height="246" Margin="415,118,0,0" 
                             VerticalAlignment="Top" Width="319" 
                             Titulo="{Binding ElementName=calendario, Path=SelectedDate, StringFormat=\{0:d\}}"/>

    </Grid>
</UserControl>
